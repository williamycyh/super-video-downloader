<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="suggestion"
            type="com.example.data.local.model.Suggestion" />

        <variable
            name="listener"
            type="com.example.tubedown.component.adapter.SuggestionListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tv_suggestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/search_24px"
            android:drawablePadding="@dimen/padding_small"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:onClick="@{() -> listener.onItemClicked(suggestion)}"
            android:padding="@dimen/padding_small"
            android:textSize="@dimen/text_small"
            tools:text="@{suggestion.content}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>